function pass_if_NOT_equal
{
  if [ "$1" = "$2" ]; then
    print_FAIL
  else
    print_PASS
  fi
}


function grep_xml {
  local xml_file="$1"
  tmp="$(mktemp)"
  cat "${xml_file}" > "${tmp}" 2>/dev/null
  while [ "$2" != "" ]; do
    echo -n "*** $2: "
    grep "$2" "${tmp}"
    grep "$2" "${tmp}" > "${tmp}" &>/dev/null
    status="$?"
    echo "### $?"
    shift
  done
  return $status
}


function mask_xmlns {
  local xmlfile=$1
  newfile="$(mktemp)"
  sed 's/xmlns="\(.*\)"/xxxns="\1"/' "${xmlfile}" > "${newfile}" 2>/dev/null
  echo "${newfile}"
}






